{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "dist",
    "rootDir": "./",  // ðŸ”¹ Alterado para evitar erro com `.next`
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "plugins": [{ "name": "next" }],
    "noEmit": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"  // ðŸ”¹ Adicionado corretamente
  ],
  "exclude": ["node_modules", "dist"]
}
